public Boolean isBirthday(Contact c) {
    //code here
    Boolean isBirthday = false;
    if(c != null && c.Birthdate != null){
        if(c.Birthdate.Day() == system.now().Day() && c.Birthdate.Month() == system.now().Month()){
            isBirthday = true;
        }
    }
    return isBirthday;
}