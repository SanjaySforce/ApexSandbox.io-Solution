public Integer nextPrime(Integer num) {
    //code here
        Integer next = num + 1;
        while (true) {
            if (isPrime(next)) {
                return next;
            }
            next++;
        }
}
 public static Boolean isPrime(Integer num) {
        if (num <= 1) {
            return false;
        }
        for (Integer i = 2; i <= Math.sqrt(num); i++) {
            if (num % i == 0) {
                return false;
            }
        }
        return true;
    }